<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <TextView
        android:id="@+id/textView3"
        style="@style/logo"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profileimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_action_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tv_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="홍길동"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_profileimg"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="@+id/iv_profileimg"
        app:layout_constraintTop_toBottomOf="@+id/iv_profileimg"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_skintype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="피부타입"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/iv_profileimg"
        app:layout_constraintTop_toBottomOf="@+id/tv_profilename"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="・"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/tv_skintype"
        app:layout_constraintTop_toTopOf="@+id/tv_skintype"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_allergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알러지 없음"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_profileimg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_editprofile"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:text="프로필 편집"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_profileimg"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/iv_profileimg"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>